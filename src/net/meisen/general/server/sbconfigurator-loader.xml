<?xml version="1.0" encoding="UTF-8" ?>

<Config xmlns="http://dev.meisen.net/sbconfigurator" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://dev.meisen.net/sbconfigurator http://dev.meisen.net/xsd/sbconfigurator/sbconfigurator-loader.xsd">
  
  <!-- we define a loader for the default settings, which are always loaded -->
  <loaderDefinition id="tdServerDefaultConfigurationLoader" validationEnabled="true" beanOverridingAllowed="false" 
                    selector="net/meisen/general/server/settings/defaultServerSettings.xml" 
  					loadFromClassPath="true" loadFromWorkingDir="false"
                    xslt="net/meisen/general/server/settings/serverConfigToSpringContext.xslt" />

  <!-- now use the same loader to load another configuration instance, which can overload the default -->
  <loaderDefinition id="tdServerConfigurationLoader" validationEnabled="true" beanOverridingAllowed="false" selector="${server.settings.selector}" 
  					loadFromClassPath="true" loadFromWorkingDir="false"
                    xslt="net/meisen/general/server/settings/serverConfigToSpringContext.xslt" />
</Config>